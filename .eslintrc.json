{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": ["warn", { "allow": ["error", "warn", "info"] }],
    "no-unused-vars": "warn",
    "no-undef": "error"
  }
}
